@{
    ViewData["title"] = "Основные средства ИТ";
}

<app-root></app-root>

@section ngScripts {
    <script type="text/javascript">
    if (detectIE()) {
        var el = document.getElementsByTagName("app-root")[0];
        el.remove();
        document.write("IE no go, use Chrome!");
    }

    function detectIE() {
        var ua = window.navigator.userAgent;
        var msie = ua.indexOf('MSIE ') != -1 || ua.indexOf('Edge/') != -1;

        if (msie) {
            return true;
        }

        return false;
    }
    </script>
    
    <environment include="Development">
        <script asp-src-include="~/js/polyfills.js"></script>
        <script asp-src-include="~/js/runtime.js" type="module"></script>
        <script asp-src-include="~/js/main.js" type="module"></script>
        <script asp-src-include="~/js/vendor.js" type="module"></script>
    </environment>

    <environment include="Staging,Production">
        <script asp-src-include="~/js/polyfills-es5.*.js"></script>
        <script asp-src-include="~/js/scripts.*.js" type="module"></script>
        <script asp-src-include="~/js/polyfills-es2015.*.js"></script>
        <script asp-src-include="~/js/*-es2015.*.js" asp-src-exclude="~/js/polyfills*.js"></script>
        <script asp-src-include="~/js/*-es5.*.js" asp-src-exclude="~/js/polyfills*.js" nomodule></script>
    </environment>
}
